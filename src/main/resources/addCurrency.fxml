<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="controller.AddCurrencyController"
          hgap="10" vgap="10" padding="10">

    <Label text="Abbreviation:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="abbreviationField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="nameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Rate to USD:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="rateField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Button text="Save" GridPane.rowIndex="3" GridPane.columnIndex="1" onAction="#onSaveClicked"/>
</GridPane>
