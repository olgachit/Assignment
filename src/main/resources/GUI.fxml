<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.Controller"
      spacing="10" padding="10">

    <HBox spacing="10">
        <Label text="Amount:"/>
        <TextField fx:id="amountField" prefWidth="100"/>
    </HBox>

    <HBox spacing="10">
        <Label text="From:"/>
        <ComboBox fx:id="sourceCurrencyBox"/>
        <Label text="To:"/>
        <ComboBox fx:id="targetCurrencyBox"/>
    </HBox>

    <Button fx:id="convertButton" text="Convert" onAction="#onConvertClicked"/>
    <TextField fx:id="resultField" editable="false"/>

    <Button fx:id="addCurrencyButton" text="Add Currency" onAction="#onAddCurrencyClicked"/>
</VBox>
